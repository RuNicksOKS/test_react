    "version": "0.2.0",
    "configurations": [
        {
          "name": "Python: Django",
          "type": "python",
          "request": "launch",
          "program": "${workspaceFolder}/manage.py",
          "args": [
            "runserver", 
            "8001"
          ],
          "django": true,
          "console": "integratedTerminal",
          "cwd": "${workspaceFolder}",
          "env": {
            "PYTHONUNBUFFERED": "1",
            "DJANGO_SETTINGS_MODULE": "app.settings.local"
          },
          "justMyCode": false
        }
      ]
}